<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_LinearLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示LinearLayoutManager"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_GridLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示GridLayoutManager"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_FullyLinearLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示FullyLinearLayoutManager"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_FullyGridLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示FullyGridLayoutManager"
        android:layout_margin="8dp"/>

</LinearLayout>
